<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Define the colors first -->
    <style name="CustomLightTheme" parent="Theme.Material3.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/actionbar_blue</item>
        <item name="colorPrimaryVariant">@color/actionbar_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/actionbar_blue</item>
        <item name="colorSecondaryVariant">@color/actionbar_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/actionbar_blue</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Action bar styling -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>

        <!-- General theme colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- Custom style for Action Bar -->
    <style name="CustomActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/actionbar_blue</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- Custom style for Action Bar Title -->
    <style name="ActionBarTitleText" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>




</resources>